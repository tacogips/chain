{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2015",
        "lib": ["dom", "ES2017"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDirs": [
            "./src"
        ],
        "alwaysStrict": true,
        "outFile": "./dist/",
        "strict": true,
				"noImplicitAny":true,
				"noImplicitThis":true,
				"alwaysStrict":true,
				"strictNullChecks":false,
				"strictFunctionTypes":true.
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        }
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
